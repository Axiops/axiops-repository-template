# Top-level EditorConfig file
root = true

# Universal settings for all file types
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 88  # A modern standard, avoids conflicts with Black/Prettier defaults

# Go files use tabs for indentation, as is the standard.
# A longer line length is acceptable for Go code.
[*.go]
indent_style = tab
max_line_length = 120

# YAML and Markdown files use 2 spaces for indentation.
[*.{yaml,yml,md}]
indent_style = space
indent_size = 2

# Markdown files should have a shorter line length for readability.
[*.md]
max_line_length = 80
